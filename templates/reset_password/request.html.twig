{% extends 'base.html.twig' %}

{% block title %}Mot de passé oublié{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Mot de passé oublié</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre email et nous allons vous envoyer un email pour réinitialiser votre mot de passe
            </small>
        </div>

        <button class="btn-connection">Enoyver</button>
    {{ form_end(requestForm) }}
{% endblock %}
